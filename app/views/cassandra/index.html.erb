<table border="1">
	<th>#</th>
	<th>Author</th>
	<th>Title</th>
	<th>Genre</th>
	<th>Published</th>
	<th>Description</th>
	<th>Price</th>
	<%= @books.each_with_index do |book, idx| %>
	<tr>
		<td><%= idx+1 %></td>
		<td><%= book.author %></td>
		<td><%= book.title %></td>
		<td><%= book.genre %></td>
		<td><%= book.publish_date %></td>
		<td><%= book.description %></td>
		<td><%= book.price %></td>
	</tr>
	<% end %>

</table>